<lasso-page package-path="./browser.json"/>
<include("../layout/template/index.marko", input)>
<@main>
<if(input.user)>
<secure-container user=input.user rsvp=input.rsvp mealTypes=input.mealTypes
                  rsvpPerson=input.rsvpPerson></secure-container>
</if>
<div id="divTop"></div>
<div class="container-fluid thingys">
    <section-splash></section-splash>
    <if(!input.user)>
        <auth0-login></auth0-login>
    </if>
    <section-welcome user=input.user></section-welcome>
    <section-events></section-events>
    <if(input.user)>
        <section-faq faqs=input.faqs></section-faq>
    </if>
    <section-places-map></section-places-map>
    <div class="row">
        <div class="col" id="colGithub">
            <a href="https://github.com/charlesread/watermelon" target="_blank">
                <i class="fa fa-github" aria-hidden="true"></i>
            </a>
            &nbsp;
            <a width="150" height="50" href="https://auth0.com/?utm_source=oss&utm_medium=gp&utm_campaign=oss" target="_blank" alt="Single Sign On & Token Based Authentication - Auth0"><img width="150" height="50" alt="JWT Auth for open source projects" src="//cdn.auth0.com/oss/badges/a0-badge-light.png"/></a>
        </div>
    </div>
</div>
<input type="hidden" value="${input.user ? input.user.first_name : ''}" id="userFirstName"/>
<input type="hidden" value="${input.user ? input.user.last_name: ''}" id="userLastName"/>
<!--<div class="polaroid box effect1">-->
    <!--<img src="/assets/polaroids/rambla_lg.jpg">-->
<!--</div>-->
</@main>
</include>